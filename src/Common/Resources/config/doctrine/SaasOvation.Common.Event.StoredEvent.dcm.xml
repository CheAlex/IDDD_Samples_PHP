<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="SaasOvation\Common\Event\StoredEvent" table="tbl_stored_event">
        <id name="eventId" type="integer" column="event_id">
            <generator strategy="IDENTITY"/>
        </id>
        <field name="eventBody" type="string" column="event_body"/>
        <field name="occurredOn" type="datetime" column="occurred_on"/>
        <field name="typeName" type="string" column="type_name"/>
    </entity>
</doctrine-mapping>
