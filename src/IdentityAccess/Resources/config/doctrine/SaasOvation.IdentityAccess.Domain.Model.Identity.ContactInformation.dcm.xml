<?xml version="1.0"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <embeddable name="SaasOvation\IdentityAccess\Domain\Model\Identity\ContactInformation">
        <field name="emailAddress" column="contact_information_email_address_address" />
        <field name="postalAddressCity" column="contact_information_postal_address_city" type="string" />
        <field name="postalAddressCountryCode" column="contact_information_postal_address_country_code" type="string" />
        <field name="postalAddressPostalCode" column="contact_information_postal_address_postal_code" type="string" />
        <field name="postalAddressStateProvince" column="contact_information_postal_address_state_province" type="string" />
        <field name="postalAddressStreetAddress" column="contact_information_postal_address_street_address" type="string" />
        <field name="primaryTelephone" column="contact_information_primary_telephone_number" type="string" />
        <field name="secondaryTelephone" column="contact_information_secondary_telephone_number" type="string" />
    </embeddable>
    
</doctrine-mapping>